@model IEnumerable<MyLibrary.WebApp.DTOs.UserDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Add User</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Surname</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            @*<th>Role</th>*@
            <th>Short Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Password</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                @*<td>@item.Roles</td>*@
                <td>@item.ShortDescription</td>
                <td>
                    <a asp-action="Update" class="btn btn-success" asp-route-id="@item.Id">Güncelle</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>